@model IEnumerable<Currency>;
@{
    ViewData["Title"] = "Admin";
}

<h2>Админка</h2>

<div class="row">
    <div class="col-md-4 border">
        <h2>Валюты</h2>
        <a asp-action="AddCurrency" class="btn btn-default mrg-bottom">Добавить валюту</a>
        <table class="table">
            @foreach (var item in Model)
            {
                <tr><td>@item.Name</td><td>@item.Rate</td></tr>
            }
        </table>
    </div>
</div>
<hr>
<div class="row mrg-top">
    <a asp-action="SharesToModerate" class="btn btn-default mrg-bottom">Проверка акций</a>
</div>