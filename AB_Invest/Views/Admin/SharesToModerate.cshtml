@{
    ViewData["Title"] = "SharesToModerate";
}

<h2>Акции подлежащие модерации</h2>

<div class="row">
    <div>
        <h2>Акции</h2>
        <table class="table">
            <tr><td>Компания</td><td>Название акции</td><td>Стоимость</td><td>Валюта</td><td>Дивиденды</td><td></td></tr>
            @foreach (var item in (IEnumerable<Share>)ViewBag.Shares)
            {
                <tr>
                    <td>@item.Company.Name</td>
                    <td>@item.Name</td>
                    <td>@item.Cost</td>
                    <td>@item.Currency.Name</td>
                    <td>@item.Dividends</td>
                    <td><a asp-action="ModerateShare" asp-route-shareId="@item.Id" class="btn btn-default">Moderate</a></td>
                </tr>
            }
        </table>
    </div>
</div>
