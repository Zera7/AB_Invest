@model AB_invest.Models.Account;

@{
    ViewData["Title"] = "CreateUser";
}

<h2>CreateUser</h2>

<hr />
<div class="row">
    <h2>Регистрация пользователя</h2>
    <div class="col-md-4">
        <form asp-action="CreateUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserData.FirstName" class="control-label"></label>
                <input asp-for="UserData.FirstName" class="form-control" />
                <span asp-validation-for="UserData.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserData.LastName" class="control-label"></label>
                <input asp-for="UserData.LastName" class="form-control" />
                <span asp-validation-for="UserData.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserData.MiddleName" class="control-label"></label>
                <input asp-for="UserData.MiddleName" class="form-control" />
                <span asp-validation-for="UserData.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
                <input type="submit" value="Create" class="btn btn-default" />
        </form>
    </div>
</div>