@model LogInData
@{
    ViewData["Title"] = "LogIn";
}

<h2>LogIn</h2>

<hr />
<div class="row">
    <div class="col-md-4 center-block" style="float:inherit">
        <h2>Авторизация</h2>
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input type="submit" value="Войти" class="btn btn-primary" />
            <hr style="width: 80%;"/>
            <a asp-action="CreateUser" class="btn btn-default mrg-bottom center-block">Зарегистрироваться как пользователь</a>
            <a asp-action="CreateCompany" class="btn btn-default center-block">Зарегистрироваться как компания</a>
        </form>
    </div>
</div>